<!doctype html>
<html lang="<%= site.locale %>">
  <head>
    <%= render "head", metadata: site.metadata, title: resource.data.title %>
  </head>
  <body class="<%= resource.data.layout %> <%= resource.data.page_class %> has-background-white-ter">
    <div class="columns">
      <div class="column is-one-fifth">
        <%= render Shared::Navbar.new(metadata: site.metadata, resource: resource) %>
      </div>
      <div class="column">
        <main>
          <%= yield %>
        </main>
      </div>
    </div>

    <%= render "footer", metadata: site.metadata %>
  </body>
</html>
